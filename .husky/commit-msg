#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

commit_msg=$(cat "$1")

# 머지 커밋은 검증 건너뛰기
if echo "$commit_msg" | grep -qE '^Merge '; then
  echo "✅ 머지 커밋은 형식 검증을 건너뜁니다."
  exit 0
fi

# 커밋 메시지 형식 검증: feat(scope): 한글~
# 타입: feat, fix, docs, style, refactor, test, chore
# scope는 필수사항
# 메시지에 한글이 포함되어야 함

if ! echo "$commit_msg" | grep -qE '^(feat|fix|docs|style|refactor|test|chore)\([^)]+\): .*[가-힣].*'; then
  echo "❌ 커밋 메시지 형식이 올바르지 않습니다."
  echo ""
  echo "올바른 형식: <type>(<scope>): <한글 메시지>"
  echo ""
  echo "타입: feat, fix, docs, style, refactor, test, chore"
  echo "scope: 필수사항"
  echo "메시지: 한글이 포함되어야 합니다"
  echo ""
  echo "예시:"
  echo "  feat(auth): 사용자 인증 기능 추가"
  echo "  fix(auth): 로그인 버그 수정"
  echo "  docs(readme): README 업데이트"
  echo "  refactor(api): API 클라이언트 리팩토링"
  echo "  feat(user): Add user authentication 기능"
  exit 1
fi

echo "✅ 커밋 메시지 형식이 올바릅니다."

